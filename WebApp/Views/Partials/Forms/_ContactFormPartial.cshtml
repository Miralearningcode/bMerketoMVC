@model ContactFormViewModel

<section class="contact-form">
    <div class="container">
        <div class="title">Write something</div>

        <form novalidate method="post" asp-action="Submit">
            <div class="name form-group">
                <label asp-for="Name">Your Name*</label>
                <input asp-for="Name" type="text" class="invalid" required>
                <span asp-validation-for="Name"class="error">Your name is required</span>
            </div>

            <div class="email form-group">
                <label asp-for="Email">Your Email*</label>
                <input asp-for="Email" type="text" class="invalid" required>
                <span asp-validation-for="Email" class="error">Your email is required</span>
            </div>

            <div class="phoneNumber form-group">
                <label asp-for="Phone">Phone Number (optional)</label>
                <input asp-for="Phone" type="text">
            </div>

            <div class="companyName form-group">
                <label asp-for="Company">Company (optional)</label>
                <input asp-for="Company" type="text">
            </div>

            <div class="message form-group">
                <label asp-for="MessageText">Message*</label>
                <textarea asp-for="MessageText" class="invalid" required></textarea>
                <span class="error">Message is required</span>
            </div>

            <div class="terms form-checkbox-group">
                <label class="custom-checkbox">
                    Save my name, email in the this browser for the next time I comment.
                    <label asp-for="SaveInfo"></label>
                    <input asp-for="SaveInfo">
                    <span class="checkmark"></span>
                </label>

            </div>
            <button class="btn-theme">Submit</button>
        </form>
    </div>
</section>


