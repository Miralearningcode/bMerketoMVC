@model RowCollectionViewModel

@if (Model != null)
{
    <section class="row-collection">
        <div class="container-fluid">
            @if (!string.IsNullOrEmpty(Model.Title))
            {
                <h1 class="title">@Model.Title</h1>
            }

            @if (Model.GridItems != null)
            {
                <div class="collection-grid">
                    @foreach (var item in Model.GridItems)
                    {
                        <partial name="/Views/Partials/_GridCollectionItemPartial.cshtml" model="item" />
                    }
                </div>
            }

            <div class="load-more">
            <button class="btn-outline-white me-1"><i class="fa-solid fa-chevron-left"></i></button>
            <button class="btn-outline-white ms-1"><i class="fa-solid fa-chevron-right"></i></button>
            </div>
        </div>
    </section>
}