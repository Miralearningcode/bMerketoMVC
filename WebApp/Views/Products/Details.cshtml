@model ProductDetailsViewModel

@section scripts {
    <script src="~/js/form-validation.js" defer></script>
}


<section class="breadcrumb">
    <div class="container">
        <div class="content">
            <h1>SHOP</h1>
            <ul>
                <li>HOME.</li>
                <li>PRODUCT</li>
                <li>DETAILS</li>
            </ul>
        </div>
    </div>
</section>

<h2>@Model.Name</h2>
<p>Article Number: @Model.ArticleNumber</p>
<p>Price: @Model.Price</p>
<img src="images/products/@Model.ImageUrl" alt="@Model.Name">

<!-- Add additional HTML code for displaying other product details -->
<!-- Access the All property if needed -->
@if (Model.All != null)
{
    <!-- Add code to display the grid items -->
    @foreach (var item in Model.All.GridItems)
    {
        <div>
            <p>@item.Name</p>
            <!-- Add code to display other properties of the grid item -->
        </div>
    }
}
