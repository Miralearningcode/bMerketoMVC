@model List<UserRolesViewModel>
@{
    ViewData["Title"] = "Backoffice";
}

<h1>User Roles</h1>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        <span>@(role == "admin" ? "Administrator" : "User")</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>